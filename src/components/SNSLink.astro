---
import { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'
import NoContents from './NoContents.astro'
import '../styles/font.css'

export interface Props {
  text: string
}

const { text } = Astro.props
---

<div class="sns-link">
  <p>{text}</p>
  <a class="twitter-link" href="https://twitter.com/rakuraku_eng"><span class="fa-twitter"></span></a>
</div>

<style>
.sns-link{
    display: flex;
}
.sns-link p{
  margin: 0;
  color: #3F3F3F;
}
.twitter-link{
    position:relative;
    display: inline-block;
    width: 30px;
    height: 30px;
    margin:0 5px;
}
.twitter-link:hover {
    /* background-color: #ddd; */
    opacity: 0.7;
    color: #fff;
    transition: all 0.3s ease-in-out;
}
.twitter-link span{
    display: inline-block;
    width:100%;
    height:100%;
    color:#1da1f2;
}
.twitter-link span::before{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
</style>
